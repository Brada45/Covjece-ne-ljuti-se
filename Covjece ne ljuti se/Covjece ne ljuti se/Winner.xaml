<Window x:Class="Covjece_ne_ljuti_se.Winner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Covjece_ne_ljuti_se"
        mc:Ignorable="d"
        Title="Winner" Height="600" Width="600">
    <Grid>

        <MediaElement Name="mediaPlayer" Height="600" Width="600" Source="Resources/fireworks.gif" LoadedBehavior="Play" 
                      UnloadedBehavior="Manual" 
                      MediaEnded="MediaPlayer_MediaEnded" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="Player" Foreground="White" FontStyle="Italic"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Button Content="Play again" FontSize="20" BorderThickness="0" Foreground="White" Background="Transparent" HorizontalAlignment="Center" Margin="0,428,0,0" VerticalAlignment="Top" Height="46" Width="141" Click="Button_Click"/>
    </Grid>
</Window>

<Window x:Class="Covjece_ne_ljuti_se.ChoosePlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Covjece_ne_ljuti_se"
        mc:Ignorable="d"
        Title="ChoosePlayers" Height="500" Width="300">
    <Grid>
       
        <Label Content="2 Player" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,60" />
        <Button Height="40" Width="86" HorizontalAlignment="Left" Margin="104,95,0,0" BorderBrush="LightBlue" BorderThickness="3"  VerticalAlignment="Top" Click="clicked_TwoRedYellow">
            <Grid>
                <Grid Width="40" Height="34" Margin="0,0,40,0"  Background="Red"/>
                <Grid Width="40" Height="34" Margin="36,0,0,0"  Background="Yellow"/>
            </Grid>
        </Button>

        <Button Height="40" Width="86" HorizontalAlignment="Left" Margin="104,50,0,0" BorderBrush="LightBlue" BorderThickness="3"  VerticalAlignment="Top" Click="clicked_TwoGreenBlue">
            <Grid>
                <Grid Width="40" Height="34" Margin="0,0,40,0"  Background="Green"/>
                <Grid Width="40" Height="34" Margin="36,0,0,0"  Background="Blue"/>
            </Grid>
        </Button>
        <Label Content="3 Player" FontSize="20" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top"/>
        <Button Height="40" Width="126" BorderBrush="LightBlue" BorderThickness="3" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Click="clicked_Three">
            <Grid>
                <Grid Width="40" Height="34" Margin="0,0,80,0"  Background="Red"/>
                <Grid Width="40" Height="34" Margin="36,0,40,0"  Background="Green"/>
                <Grid Width="40" Height="34" Margin="78,0,0,0" Background="Yellow"/>
            </Grid>
        </Button>
        <Label Content="4 Player" HorizontalAlignment="Center" FontSize="20" Margin="0,290,0,0" VerticalAlignment="Top"/>

        <Button Width="166" Height="40" BorderBrush="LightBlue" BorderThickness="3" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Click="clicked_Four">
            <Grid>
                <Grid Width="40" Height="34" Margin="0,0,120,0"  Background="Red"/>
                <Grid Width="40" Height="34" Margin="36,0,80,0"  Background="Green"/>
                <Grid Width="40" Height="34" Margin="76,0,40,0" Background="Yellow"/>
                <Grid Width="40" Height="34" Margin="118,0,0,0" Background="Blue"/>
            </Grid>
        </Button>

    </Grid>
</Window>
